{%
set classes = [
dom_id ? 'js-view-dom-id-' ~ dom_id,
'event-grid'
]
%}
<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {{ title }}
    {{ title_suffix }}

    {% if header %}
        <header>
            {{ header }}
        </header>
    {% endif %}

    {{ exposed }}
    {{ attachment_before }}

    {% embed '@base/_smart-grid.twig' with {
    classes:'event-grid__wrapper',
    rowItems: {
    small: 1,
    large: 3,
    }
    }%}
        {% block gridItems %}
            {% for row in rows.0['#rows'] %}
                <div class="event-grid__item">
                    {{ row }}
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {{ empty }}
    {{ pager }}

    {{ attachment_after }}
    {{ more }}

    {% if footer %}
        <footer>
            {{ footer }}
        </footer>
    {% endif %}

    {{ feed_icons }}
</div>
